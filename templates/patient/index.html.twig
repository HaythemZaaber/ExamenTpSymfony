{% extends 'base.html.twig' %}

{% block title %}Patient index{% endblock %}

{% block body %}
<div class='d-flex justify-content-between align-items-center my-4 mx-5'>

    <h1>Patient index</h1>
<a class="btn btn-primary" href="{{ path('app_patient_new') }}">Create new</a>
</div>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>LastName</th>
                <th>Birthday</th>
                <th>Adresse</th>
                <th>Phone</th>
                <th>actions</th>
                <th>Analysis</th>
            </tr>
        </thead>
        <tbody>
        {% for patient in patients %}
            <tr>
                <td>{{ patient.id }}</td>
                <td>{{ patient.name }}</td>
                <td>{{ patient.lastName }}</td>
                <td>{{ patient.birthday }}</td>
                <td>{{ patient.adresse }}</td>
                <td>{{ patient.phone }}</td>
                <td>
                    <a class="btn btn-success" href="{{ path('app_patient_show', {'id': patient.id}) }}">show</a>
                    <a class="btn btn-success" href="{{ path('app_patient_edit', {'id': patient.id}) }}">edit</a>
                </td>
                <td>
                    <a class="btn btn-primary"  href="{{ path('app_analyse_new_for_patient', {'patientId': patient.id}) }}">CreateAnalysis</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    
{% endblock %}
